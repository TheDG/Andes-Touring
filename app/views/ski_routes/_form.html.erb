<%= form_for(ski_route, url: form_url) do |f| %>
<%= render 'shared/form_errors', element: ski_route %>
<div class="row">
  <div class="col-lg-12">
    <hr>
    <div class="form-group row justify-content-center">
      <label class="col-sm-3 col-form-label" for="inlineFormCustomSelectPref">Nombre</label>
      <div class="col-sm-7">
        <%= f.text_field :title, class: 'form-control', required: true %>
      </div>
    </div>
    <div class="form-group row justify-content-center">
      <label class="col-sm-3 col-form-label" for="inlineFormCustomSelectPref">Texto Introductorio</label>
      <div class="col-sm-7">
        <%= f.text_area :intro, class: 'form-control', required: true, rows: 5 %>
      </div>
    </div>
    <div class="form-group row justify-content-center">
      <label class="col-sm-3 col-form-label" for="inlineFormCustomSelectPref">Datos de la ruta</label>
      <div class="col-sm-7">
        <div class="border p-3">
          <div class="row">
            <div class="col-sm-12 col-md-4 text-center">
              Distancia [km]
              <%= f.number_field :distance, class: 'form-control' %>
            </div>
            <div class="col-sm-12 col-md-4 text-center">
              Vert [m]
              <%= f.number_field :vert, class: 'form-control' %>
            </div>
            <div class="col-sm-12 col-md-4 text-center">
              Tiempo [h]
              <%= f.number_field :time, class: 'form-control' %>
            </div>
          </div>
          <div class="row">
            <div class="col-6 text-center">
              Aspect
              <%= f.select :aspect, options_for_select(SkiRoute::ASPECTS),{ include_blank: true }, { class: 'custom-select' } %>
            </div>
            <div class="col-6 text-center">
              Dificultad
              <%= f.select :dificulty, options_for_select((0..10)),{}, { class: 'custom-select' } %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="form-group row justify-content-center">
      <label class="col-sm-3 col-form-label" for="inlineFormCustomSelectPref">Descripción de ruta</label>
      <div class="col-sm-7">
        <%= f.text_area :route_description, class: 'form-control', required: true, rows: 5 %>
      </div>
    </div>
    <div class="form-group row justify-content-center">
      <label class="col-sm-3 col-form-label" for="inlineFormCustomSelectPref">Extras</label>
      <div class="col-sm-7">
        <div class="border p-3">
          <div class="row">
            <div class="col-sm-12 col-md-6 text-center">
              Estación de Pronostico
              <%= f.select :location, options_for_select(SkiRoute::LOCATIONS), { include_blank: true }, { class: 'custom-select'} %>
            </div>
            <div class="col-sm-12 col-md-6 text-center">
              Region
              <%= f.select :sector, options_for_select(SkiRoute::SECTORS.invert),  {}, { class: 'custom-select'} %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <br/>
    <div class="row">
      <div class="col-lg-12 d-flex justify-content-center">
        <%= f.submit class: "btn btn-success block-center" %>
      </div>
    </div>
  </div>
</div>
<% end %>
