<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <div class="row">
      <div class="offset-sm-1 col-sm-2">
        <div class="row justify-content-center">
          <i class="fas fa-route fa-4x"></i>
        </div>
        <div class="row mt-2 justify-content-center">
          <h6>
            <%=SkiRoute.human_attribute_name('distance')%>
          </h6>
        </div>
        <div class="row justify-content-center">
          <h3 class="font-weight-bold">
            <% if ski_route.distance %>
              <%=ski_route.distance%>
              km
            <% else %>
              ?
            <% end %>
          </h3>
        </div>
      </div>
      <div class="col-sm-2">
        <div class="row justify-content-center">
          <i class="fas fa-mountain fa-4x"></i>
        </div>
        <div class="row mt-2 justify-content-center">
          <h6>
            <%=SkiRoute.human_attribute_name('vert')%>
          </h6>
        </div>
        <div class="row justify-content-center">
          <h3 class="font-weight-bold">
            <% if ski_route.vert %>
              <%=ski_route.vert%>
              m
            <% else %>
              ?
            <% end %>
          </h3>
        </div>
      </div>
      <div class="col-sm-2">
        <div class="row justify-content-center">
          <i class="fas fa-hourglass-start fa-4x"></i>
        </div>
        <div class="row mt-2 justify-content-center">
          <h6>
            <%=SkiRoute.human_attribute_name('time')%>
          </h6>
        </div>
        <div class="row justify-content-center">
          <h3 class="font-weight-bold">
            <% if ski_route.time %>
              <%=ski_route.time%>
              h
            <% else %>
              ?
            <% end %>
          </h3>
        </div>
      </div>
      <div class="col-sm-2">
        <div class="row justify-content-center">
          <i class="fas fa-cloud-sun fa-4x"></i>
        </div>
        <div class="row mt-2 justify-content-center">
          <h6>
            <%=SkiRoute.human_attribute_name('aspect')%>
          </h6>
        </div>
        <div class="row justify-content-center">
          <h3 class="font-weight-bold">
            <% if ski_route.aspect.present? %>
              <%=ski_route.aspect%>
            <% else %>
              ?
            <% end %>
          </h3>
        </div>
      </div>
      <div class="col-sm-2">
        <div class="row justify-content-center">
          <i class="fas fa-skull-crossbones fa-4x"></i>
        </div>
        <div class="row mt-2 justify-content-center">
          <h6>
            <%=SkiRoute.human_attribute_name('dificulty')%>
          </h6>
        </div>
        <div class="row justify-content-center">
          <h3 class="font-weight-bold"><%=ski_route.dificulty%></h3>
        </div>
      </div>
    </div>
  </div>
</div>
