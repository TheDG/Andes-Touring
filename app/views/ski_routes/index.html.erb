<!-- start section portfolio -->
<div id="portfolio" class="text-center paddsection">

  <div class="container">
    <div class="section-title text-center">
      <h2>Mis Rutas
          <%= link_to new_ski_route_path do %>
            <i class="fas fa-plus-circle float-right"></i>
          <% end %>
      </h2>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="portfolio-list">
          <ul class="nav list-unstyled" id="portfolio-flters">
            <li class="filter filter-active" data-filter=".all">Todas</li>
            <% SkiRoute::SECTORS.each do |key, value|  %>
              <li class="filter" data-filter=<%=".#{key}"%>><%= value %></li>
            <% end %>
          </ul>
        </div>

        <div id="portfolio-container">
          <% @ski_routes.each do |route| %>
            <div class="col-lg-4 col-md-6 portfolio-thumbnail all <%= route.sector%>">
              <div class="journal-info">
                <%= link_to ski_route_path(route) do %>
                  <% if route.avatar.attached? %>
                    <%= image_tag(route.avatar.variant(resize_to_limit: [500, 500]), alt:"img")%>
                  <% else %>
                    <%= image_tag('placeholder.jpg', alt:"img")%>
                  <% end %>
                  <h5><%= route.title %></h5>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

  <!-- End section portfolio -->
