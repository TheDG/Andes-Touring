<% if user_signed_in? %>
  <div class="col-lg-12">
    <div class="cmt padDiv">
      <%= form_for(Comment.new, url: ski_route_comments_path(ski_route)) do |f| %>
      <div class="row">
        <div class="col-lg-12">
          <div class="form-group">
            <%= f.text_area :content, class: 'form-control', placeholder: 'Message *', required: true, style: "height: 200px" %>
          </div>
        </div>
        <div class="col-lg-1  2">
          <%= f.submit 'Send message', class: "btn btn-defeault btn-send" %>
        </div>
      </div>
    <%end%>
  </div>
</div>
<% else %>
<div class="col-lg-12">
  <div class="cmt padDiv border-bottom text-center">
    Hay que registrarse para poder comentar
  </div>
</div>
<% end %>
<div class="col-md-12">
<div class="comments text-left padDiv mb-30">
  <div class="entry-comments">
    <h6 class="mb-30">
      <%=ski_route.comments.size %>
      comments
    </h6>
    <ul class="entry-comments-list list-unstyled">
      <% ski_route.comments.each do |comment| %>
        <li>
          <div class="entry-comments-item">
            <img src="" class="entry-comments-avatar" alt="">
            <div class="entry-comments-body">
              <span class="entry-comments-author">
                <%=ski_route.user.full_name %>
              </span>
              <span>
                <a href="#">
                  <%= comment.created_at.strftime('%B %d, %Y at %l:%M %p') %>
                </a>
              </span>
              <p class="mb-10">
                <%=comment.content %>
              </p>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
</div>
