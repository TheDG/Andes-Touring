<% if element.errors.any? %>
  <div>
    <div class="alert alert-danger">
      <b>Hay <%= pluralize(element.errors.count, 'problema') %> con los datos:</b>
      <ul>
      <% element.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  </div>
<% end %>
